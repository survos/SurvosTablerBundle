{# @SurvosTabler/layout/base.html.twig v2.0 - Base layout with all blocks #}
{#
    Layouts: horizontal, sidebar, combo, navbar-overlap, navbar-dark, fluid, boxed, landing
    
    Usage:
    {% extends "@SurvosTabler/layout/base.html.twig" %}
    {% set layout = 'sidebar' %}
    {% block content %}...{% endblock %}
#}

{% set layout = layout|default('horizontal') %}
{% set containerClass = layout == 'fluid' ? 'container-fluid' : 'container-xl' %}
{% set showNavbar = layout not in ['landing'] %}
{% set showSidebar = layout in ['sidebar', 'combo'] %}
{% set showNavbarMenu = layout in ['horizontal', 'combo', 'navbar-overlap'] %}
{% set showFooter = showFooter|default(true) %}

<!doctype html>
<html lang="{{ app.request.locale|default('en') }}"{% if layout == 'rtl' %} dir="rtl"{% endif %}>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover"/>
    <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
    <title>{% block title %}{{ pageTitle|default('Tabler') }}{% endblock %}</title>
    
    {% block meta %}
        <meta name="description" content="{% block meta_description %}{% endblock %}">
    {% endblock %}
    
    {% block stylesheets %}
        {{ importmap('app') }}
    {% endblock %}
    
    {% block head %}{% endblock %}
</head>

<body class="{% block body_class %}{% if layout == 'boxed' %}layout-boxed{% endif %}{% endblock %}">
    {% block body_start %}{% endblock %}
    
    {# === BANNER (promotional/announcements) === #}
    {% block banner %}{% endblock %}
    
    <div class="page">
        {# === TOP NAVBAR === #}
        {% if showNavbar %}
        {% block navbar %}
        <header class="navbar navbar-expand-md{% if layout == 'navbar-dark' %} navbar-dark{% endif %}{% if layout == 'navbar-overlap' %} navbar-overlap{% endif %} d-print-none">
            <div class="{{ containerClass }}">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu" aria-controls="navbar-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                {# Brand/Logo #}
                {% block navbar_brand %}
                <h1 class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
                    <a href="{{ path('app_homepage') }}">
                        {% block brand %}
                            {{ ux_icon('tabler:brand-tabler', {height: 32, class: 'navbar-brand-image'}) }}
                            <span class="ms-2 d-none d-sm-inline">{% block brand_text %}Tabler{% endblock %}</span>
                        {% endblock %}
                    </a>
                </h1>
                {% endblock %}
                
                {# Right side: search, notifications, user menu #}
                <div class="navbar-nav flex-row order-md-last">
                    {% block navbar_search %}
                        {# Search form or icon #}
                    {% endblock %}
                    
                    {% block navbar_notifications %}
                        {# Notification dropdown #}
                    {% endblock %}
                    
                    {% block navbar_end %}
                        {# Additional navbar items #}
                    {% endblock %}
                    
                    {% block navbar_auth %}
                        {# User dropdown / login link #}
                        {% if app.user %}
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown" aria-label="User menu">
                                    <span class="avatar avatar-sm">{{ app.user.email|slice(0,2)|upper }}</span>
                                    <div class="d-none d-xl-block ps-2">
                                        <div>{{ app.user.email }}</div>
                                    </div>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end">
                                    {% block user_menu %}
                                        <a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
                                    {% endblock %}
                                </div>
                            </div>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn btn-outline-primary">Login</a>
                        {% endif %}
                    {% endblock %}
                </div>
            </div>
        </header>
        {% endblock %}
        {% endif %}
        
        {# === HORIZONTAL NAV MENU (below top navbar) === #}
        {% if showNavbarMenu %}
        {% block navbar_menu %}
        <header class="navbar-expand-md">
            <div class="collapse navbar-collapse" id="navbar-menu">
                <div class="navbar">
                    <div class="{{ containerClass }}">
                        <ul class="navbar-nav">
                            {% block navbar_menu_items %}
                                {# Override this block or use menu events #}
                            {% endblock %}
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        {% endblock %}
        {% endif %}
        
        {# === PAGE WRAPPER (sidebar + content) === #}
        <div class="page-wrapper">
            {# === SIDEBAR === #}
            {% if showSidebar %}
            {% block sidebar %}
            <aside class="navbar navbar-vertical navbar-expand-lg{% if layout == 'navbar-dark' %} navbar-dark{% endif %}">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar-menu" aria-controls="sidebar-menu" aria-expanded="false" aria-label="Toggle sidebar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    
                    {% block sidebar_brand %}
                    <h1 class="navbar-brand navbar-brand-autodark">
                        <a href="{{ path('app_homepage') }}">
                            {{ ux_icon('tabler:brand-tabler', {height: 32}) }}
                            <span class="ms-2">{{ block('brand_text') }}</span>
                        </a>
                    </h1>
                    {% endblock %}
                    
                    <div class="collapse navbar-collapse" id="sidebar-menu">
                        <ul class="navbar-nav pt-lg-3">
                            {% block sidebar_menu_items %}
                                {# Override this block or use menu events #}
                            {% endblock %}
                        </ul>
                    </div>
                </div>
            </aside>
            {% endblock %}
            {% endif %}
            
            {# === MAIN CONTENT AREA === #}
            <div class="page-body">
                <div class="{{ containerClass }}">
                    {# Page Header #}
                    {% block page_header %}
                    {% if block('page_title') is defined or block('page_pretitle') is defined or block('page_actions') is defined %}
                    <div class="page-header d-print-none">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                {% block page_pretitle %}{% endblock %}
                                <h2 class="page-title">
                                    {% block page_title %}{% endblock %}
                                </h2>
                            </div>
                            {% if block('page_actions') is defined %}
                            <div class="col-auto ms-auto d-print-none">
                                <div class="btn-list">
                                    {% block page_actions %}{% endblock %}
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                    {% endif %}
                    {% endblock %}
                    
                    {# Breadcrumb #}
                    {% block breadcrumb %}{% endblock %}
                    
                    {# Flash Messages #}
                    {% block flashes %}
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible" role="alert">
                                <div class="d-flex">
                                    <div>{{ message }}</div>
                                </div>
                                <a class="btn-close" data-bs-dismiss="alert" aria-label="Close"></a>
                            </div>
                        {% endfor %}
                    {% endfor %}
                    {% endblock %}
                    
                    {# Main Content #}
                    {% block content %}{% endblock %}
                </div>
            </div>
            
            {# === FOOTER === #}
            {% if showFooter %}
            {% block footer %}
            <footer class="footer footer-transparent d-print-none">
                <div class="{{ containerClass }}">
                    <div class="row text-center align-items-center flex-row-reverse">
                        <div class="col-lg-auto ms-lg-auto">
                            {% block footer_links %}{% endblock %}
                        </div>
                        <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                            {% block footer_copyright %}
                            <ul class="list-inline list-inline-dots mb-0">
                                <li class="list-inline-item">
                                    Copyright &copy; {{ 'now'|date('Y') }}
                                    <a href="." class="link-secondary">{{ block('brand_text') }}</a>.
                                    All rights reserved.
                                </li>
                            </ul>
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </footer>
            {% endblock %}
            {% endif %}
        </div>
    </div>
    
    {# === MODALS === #}
    {% block modals %}{% endblock %}
    
    {# === SCRIPTS === #}
    {% block javascripts %}{% endblock %}
    
    {% block body_end %}{% endblock %}
</body>
</html>
