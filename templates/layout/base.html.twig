{# @SurvosTabler/layout/base.html.twig #}
<!doctype html>
<html lang="{{ app.request.locale|default('en') }}">
  <head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <title>{% block title %}{{ block('page_title') is defined ? block('page_title') : 'Tabler App' }}{% endblock %}</title>

    {# Place your Tabler CSS (asset-mapper/importmap) here later #}
    {% block stylesheets %}{% endblock %}
    {% block javascripts %}{% endblock %}
  </head>
  <body class="{% block body_class %}{% endblock %}" data-turbo="false">
    <div class="page">

      {# HEADER — default render; child templates can override the block #}
      {% block header %}
        <twig:tabler:header
          pretitle="Overview"
          title="Dashboard"
          subtitle="Starter base layout"
          :dark="false"
          :overlap="false"
          :showActions="true"
          :debug="false"
        />
      {% endblock %}

      <div class="page-wrapper">
        {% block flashes %}{% endblock %}

        <div class="page-body">
          <div class="container-xl">
            <div class="row row-cards">
              <section id="{% block page_content_id %}{% endblock %}" class="{% block page_content_class %}content{% endblock %}">
                {% block content %}
                  <div class="card">
                    <div class="card-body">
                      <div class="text-secondary">
                        This is the default <code>content</code> block from <code>{{ _self }}</code>.
                      </div>
                    </div>
                  </div>
                {% endblock %}
              </section>
            </div>
          </div>
        </div>

        {# FOOTER — default render; child templates can override #}
        {% block footer %}
          <twig:tabler:footer
            appName="My App"
            :year="null"
            :links="{
              'Documentation': 'https://tabler.io/docs',
              'License': '#'
            }"
            :debug="false"
          />
        {% endblock %}
      </div>
    </div>
  </body>
</html>
