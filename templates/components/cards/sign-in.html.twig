{# templates/components/cards/sign-in.html.twig v4.8 #}
<div class="card card-md">
	<div class="card-body">
		<h2 class="h2 text-center mb-4">Login to your account</h2>

		<twig:sign-in/>
	</div>

	<twig:ui:hr text="or"/>

	<div class="card-body">
		<div class="row">
			<div class="col"><twig:ui:button :block="true" icon="brand-github" iconColor="github" text="Login with Github"/></div>
			<div class="col"><twig:ui:button :block="true" icon="brand-x" iconColor="x" text="Login with X"/></div>
		</div>
	</div>
</div>

<div class="text-center text-secondary mt-3">
	Don't have account yet? <a href="{{ page | relative }}/sign-up.html" tabindex="-1">Sign up</a>
</div>

