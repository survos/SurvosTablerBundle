{# templates/components/cards/table-users.html.twig v4.8 #}
<div class="card">
	<div class="table-responsive">
		<table class="table table-hover table-outline table-vcenter text-nowrap card-table">
			<thead>
			<tr>
				<th colspan="2">User</th>
				<th>Usage</th>
				<th class="text-center">Payment</th>
				<th>Activity</th>
				<th class="w-1">Satisfaction</th>
			</tr>
			</thead>
			<tbody>

			{% for person in people|slice(50, 8) %}
			{%- set percentage = loop.index | random_number %}
			{%- set time_offset = loop.index | random_number: 0, 800 %}
			{%- set register_offset = loop.index | random_number: 0, 8000000 %}
			{%- set percentage_color = percentage | number_color %}

			<tr>
				<td class="text-center w-1">
					<twig:ui:avatar :personId="person.id"/>
				</td>
				<td>
					<div>{{ person.full_name }}</div>
					<div class="small text-secondary">
						Registered: {{ 'now' | date('%s') | minus: register_offset | date('M %-d, Y') }}
					</div>
				</td>
				<td>
					<div class="clearfix">
						<div class="float-start">
							<strong>{{ percentage }}%</strong>
						</div>
						<div class="float-end">
							<small class="text-secondary">Jun 11, 2015 - Jul 10, 2015</small>
						</div>
					</div>
					<twig:ui:progress :value="percentage" size="sm" :color="percentage_color"/>

				</td>
				<td class="text-center">
					{%- set payment -%}
					{%- cycle 'visa', 'googlewallet', 'mastercard', 'shopify', 'ebay', 'paypal' -%}
					{%- endset -%}
					<twig:ui:payment :payment="payment"/>
				</td>
				<td>
					<div class="small text-secondary">Last login</div>
					<div>{{ 'now' | date('%s') | minus: time_offset | to_pretty_time }}</div>
				</td>
				<td class="text-center">
					{%- set percentage = loop.index | random_number: 0, 100 %}
<!--					<div class="mx-auto" data-value="{{ circlePercentage | divide: 100 }}"-->
<!--					     data-thickness="3" data-color="primary">-->
<!--						<div class="chart-circle-value">{{ percentage }}%</div>-->
<!--					</div>-->
					<twig:ui:chart-sparkline :percentage="percentage" type="donut"/>
				</td>
			</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>

</div>

