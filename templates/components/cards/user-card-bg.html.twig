{# templates/components/cards/user-card-bg.html.twig v3.9 #}
{% set personId = personId | default(0)  %}
{% set person = people[personId]  %}
<a class="card card-link" href="#">
	<div class="card-cover card-cover-blurred text-center{% if blurred  %} card-cover-blurred{% endif  %}" style="background-image: url({{ page | relative  }}/static/photos/{{ photos[personId].file  }})">
		<twig:ui:avatar size="xl" :person="person" :thumb="true" :rounded="true"/>
	</div>
	<div class="card-body text-center">
		<div class="card-title mb-1">{{ person.full_name  }}</div>
		<div class="text-secondary">{{ person.job_title  }}</div>
	</div>
</a>

