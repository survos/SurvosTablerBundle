{# templates/components/cards/development-activity.html.twig v3.9 #}
<div class="card">
	<div class="card-header border-0">
		<div class="card-title">Development activity</div>
	</div>
	<div class="position-relative">
		<div class="position-absolute top-0 left-0 px-3 mt-1 w-75">
			<div class="row g-2">
				<div class="col-auto"><twig:ui:chart-sparkline id="activity" :percentage="35" type="donut"/></div>
				<div class="col">
					<div>Today's Earning: $4,262.40</div>
					<div class="text-secondary"><twig:ui:icon icon="trending-up" color="green" class="icon-inline"/> +5% more than yesterday</div>
				</div>
			</div>
		</div>
		<twig:ui:chart chartId="development-activity" :height="12"/>
	</div>

	<div class="card-table table-responsive">
		<table class="table table-vcenter">
			<thead>
			<tr>
				<th>User</th>
				<th>Commit</th>
				<th>Date</th>
			</tr>
			</thead>
			<tbody>
			{% for commit in commits|slice(0, 5)  %}
			<tr>
				<td class="w-1">
					<twig:ui:avatar :personId="loop.index" size="sm"/>
				</td>
				<td class="td-truncate">
					<div class="text-truncate">
						{{ commit.description  }}
					</div>
				</td>
				<td class="text-nowrap text-secondary">{{ commit.date | date_to_string  }}</td>
			</tr>
			{% endfor  %}
			</tbody>
		</table>
	</div>
</div>

