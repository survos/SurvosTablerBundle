{# templates/components/cards/icons.html.twig v4.8 #}
{%- set type = type | default('outline') %}

{%- set limit = Infinity %}
{% if environment == 'development' %}
	{%- set limit = 20 %}
{% endif %}

<div class="card">
	<div class="card-header">
		<div class="card-title">{{ title }}</div>
	</div>
	<div class="card-body p-0">
		<div class="demo-icons-list-wrap">
			<div class="demo-icons-list">
				{% for icon in icons|slice(0, limit) %}
				{%- set iconName = icon[0] %}
				{% if icon[1].svg[type] %}
				<a href="https://tabler.io/icons/icon/{{ iconName }}" target="_blank" rel="noopener" class="demo-icons-list-item" title="{{ iconName }}" data-bs-toggle="tooltip" data-bs-placement="top">
					<twig:ui:icon :icon="icon-name" :type="type"/>
				</a>
				{% endif %}
				{% endfor %}
				{% for icon in (0..20) %}
				<div></div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>

