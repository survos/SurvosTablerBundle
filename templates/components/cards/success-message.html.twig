{# templates/components/cards/success-message.html.twig v4.8 #}
<div class="card card-gradient card-gradient-success">
	<div class="card-body p-5 text-center">
		<div class="mb-3">
			<twig:ui:icon icon="circle-check" class="icon-lg" color="success"/>
		</div>
		<h3 class="card-title">Success!</h3>
		<p class="text-secondary">Your changes have been saved successfully.</p>

		<div class="btn-list btn-list-center mt-5">
			<twig:ui:button text="Continue" color="success"/>
		</div>
	</div>
</div>

