{# templates/components/cards/store-product.html.twig v3.9 #}
{% set productId = productId | default(1)  %}
{% set product = products[productId]  %}
<div class="card">
	<div class="card-body">
		<div class="mb-4 text-center">
			<img src="{{ page | relative  }}/static/products/{{ product.image  }}" alt="{{ product.name  }}" class="img-fluid">
		</div>
		<h4 class="card-title"><a href="#">{{ product.name  }}</a></h4>
		<div class="mt-5 d-flex align-items-center">
			<div class="h3 mb-0">
				<strong>{{ product.price  }}</strong>
			</div>
			<div class="ms-auto">
				<a href="#" class="btn btn-primary"><twig:ui:icon icon="shopping-cart"/> Buy</a>
			</div>
		</div>
	</div>
</div>

