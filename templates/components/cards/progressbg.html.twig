{# templates/components/cards/progressbg.html.twig v4.8 #}
<div class="card">
	<div class="card-body">
		<h3 class="card-title">Top Pages</h3>

		<table class="table table-sm table-borderless">
			<thead>
			<tr>
				<th>Page</th>
				<th class="text-end">Visitors</th>
			</tr>
			</thead>
			<tbody>
			{% for url in urls %}
			<tr>
				<td>
					<twig:ui:progressbg :value="url.bounce" :text="url.uri"/>
				</td>
				<td class="w-1 fw-bold text-end">{{ url.visitors }}</td>
			</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
</div>

