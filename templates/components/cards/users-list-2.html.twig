{# templates/components/cards/users-list-2.html.twig v4.8 #}
{%- set limit = limit | default(10) %}
{%- set offset = offset | default(0) %}
<div class="card{% if class %} {{ class }}{% endif %}">
	<div class="card-header">
		<h3 class="card-title">{{ title | default('Top users') }}</h3>
	</div>
	<div class="card-body">
		<div class="row g-3">
			{%- set colors = 'green,red,yellow,x,x' | split(',') %}
			{% for person in people|slice(offset, limit) %}
			{%- set color = loop.index + 5 | random %}
			<div class="col-6">
				<div class="row g-3 align-items-center">
					<a href="#" class="col-auto">
						<twig:ui:avatar :person="person" :status="color"/>
					</a>
					<div class="col text-truncate">
						<a href="#" class="text-reset d-block text-truncate">{{ person.full_name }}</a>
						<div class="text-secondary text-truncate mt-n1">{{ loop.index | random_date_ago: 6 | timeago }}</div>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
</div>

