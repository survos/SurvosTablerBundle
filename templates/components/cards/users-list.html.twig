{# templates/components/cards/users-list.html.twig v3.9 #}
{% set limit = limit | default(8)  %}
{% set offset = offset | default(0)  %}
{% set hoverable = hoverable | default(false)  %}
{% set checkedIds = checkedIds | default(null) | split(',')  %}
<div class="card{% if class  %} {{ class  }}{% endif  %}">
	<div class="card-header">
		<h3 class="card-title">{{ title | default('Last commits')  }}</h3>
	</div>
	<div class="list-group list-group-flush{% if hoverable  %} list-group-hoverable{% endif  %}">
		{% set colors = 'green,red,yellow,x,x' | split(',')  %}
		{% for person in people limit: limit offset: offset  %}
			{% set color = loop.index + 5 | random  %}
			{% set index = '' | append: loop.index  %}
			<div class="list-group-item{% if index in checkedIds  %} active{% endif  %}">
				<div class="row align-items-center">
					{% if checkbox  %}
					<div class="col-auto"><input type="checkbox" class="form-check-input"{% if index in checkedIds  %} checked{% endif  %}></div>
					{% else  %}
					<div class="col-auto"><span class="badge{% if color != 'x'  %} bg-{{ color  }}{% endif  %}"></span></div>
					{% endif  %}
					<div class="col-auto">
						<a href="#">
							<twig:ui:avatar :person="person"/>
						</a>
					</div>

					<div class="col text-truncate">
						<a href="#" class="text-reset d-block">{{ person.full_name  }}</a>
						{% set i = loop.index | plus: offset  %}
						<div class="d-block text-secondary text-truncate mt-n1">{{ commits[i].description  }}</div>
					</div>
					{% if hoverable  %}
					{% if index in checkedIds  %}
					{% set starColor = 'textYellow'  %}
					{% else  %}
					{% set starColor = 'textSecondary'  %}
					{% endif  %}
					<div class="col-auto">
						<a href="#" class="list-group-item-actions{% if index in checkedIds  %} show{% endif  %}"><twig:ui:icon icon="star" :class="star-color"/></a>
					</div>
					{% endif  %}
				</div>
			</div>
		{% endfor  %}
	</div>
</div>

