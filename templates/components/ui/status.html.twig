<span class="status{% if color  %} status-{{ color  }}{% endif  %}{% if lite  %} status-lite{% endif  %}">
	{% if dot  %}
	<span class="status-dot{% if animated  %} status-dot-animated{% endif  %}"></span>
	{% endif  %}
	{{ text | default('Status')  }}
</span>

