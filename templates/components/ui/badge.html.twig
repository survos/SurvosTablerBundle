{# templates/components/ui/badge.html.twig v4.8 #}
{%- set el = 'span' -%}
<{{ el }} class="badge{% if scale %} badge-{{ scale }}{% endif %}{% if color %} bg-{{ color }}{% if light %}-lt{% endif %} text-{{ color }}{% if light %}-lt{% endif %}-fg{% endif %}{% if class %} {{ class }}{% endif %}">
{%- if icon -%}
	 {%- set icon = icon -%}
	 <twig:ui:icon :icon="icon"/>
{%- endif -%}
{%- if personId -%}
    {%- set personId = personId - 1 -%}
    {%- set person = people[personId] -%}
    {%- set src = person.photo -%}
    {%- if not (src) -%}
        {%- set placeholder = person.full_name | first_letters -%}
    {%- endif -%}
    <{{ el }} class="avatar" style="background-image: url({{ page | relative }}/{{ src }})">{%- if not (src) -%}{{ person.full_name | first_letters }}{%- endif -%}</{{ el }}>
{%- endif -%}
{%- if text -%}
    {{ text }}
{%- else -%}
    {{ person.full_name }}
{%- endif -%}
{% if addon %}<{{ el }} class="badge-addon {% if addonColor %}bg-{{ addonColor }}{% endif %}">{{ addon }}</{{ el }}>{% endif -%}
</{{ el }}>

