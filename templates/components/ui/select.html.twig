{# templates/components/ui/select.html.twig v3.9 #}
{% set id = id | default(key)  %}
{% set value = value  %}

{% if id  %}
{% set key = key | default('people')  %}
{% set data = selects[key]  %}

<select class="form-select{% if class  %} {{ class  }}{% endif  %}{% if state  %} is-{{ state  }}{% endif  %}"{% if placeholder  %} placeholder="{{ placeholder  }}"{% endif  %} id="select-{{ id  }}" value="{{ value  }}"{% if multiple or data.multiple  %} multiple{% endif  %}>
	{% if values  %}
		{% set values = values | split(',')  %}

		{% for value in values  %}
			<option value="{{ value  }}">{{ value  }}</option>
		{% endfor  %}
	{% else  %}

		{% set options = data.options  %}

		{% if data.data == 'people'  %}
			{% for person in people|slice(0, 20)  %}
				<option value="{{ person.id  }}"{% if indicator == 'avatar'  %} data-custom-properties="{% set indicator  %}<twig:ui:avatar size="xs" :person="person"/>{% - endcapture  %}{{ indicator | trim | escape  }}"{% endif  %}>{{ person.full_name  }}</option>
			{% endfor  %}

		{% elseif data.data == 'optgroup'  %}
			{% for group in options  %}
	 			<optgroup label="{{ group.title  }}">
					{% for option in group.options  %}
					<option value="{{ option  }}">{{ option  }}</option>
					{% endfor  %}
				</optgroup>
			{% endfor  %}

		{% else  %}
			{% for option in options  %}
				{% if option.first  %}
					{% if indicator == 'flag'  %}
						{% capture indicatorHtml  %}
							{% set country = option[1].flag  %}
							<twig:ui:flag size="xs" :flag="country"/>
						{% - endcapture  %}
					{% elseif indicator == 'label'  %}
						{% capture indicatorHtml  %}
							{% set label = option[1].label  %}
							<span class="badge bg-primary-lt">{{ label  }}</span>
						{% - endcapture  %}
					{% endif  %}
					<option value="{{ option[0]  }}"{% if indicator  %} data-custom-properties="{{ indicatorHtml | trim | escape  }}"{% endif  %}{% if option[1].selected  %} selected{% endif  %}>{{ option[1].name  }}</option>
				{% else  %}
					<option value="{{ option  }}">{{ option  }}</option>
				{% endif  %}
			{% endfor  %}
		{% endif  %}
	{% endif  %}
</select>

{% set script  %}
<script>
	document.addEventListener("DOMContentLoaded", function () {
		{% if environment == 'development'  %}
		window.tabler_select = window.tabler_select || {};
		{% endif  %}

		var el;
		window.TomSelect && ({% if environment == 'development'  %}window.tabler_select["select-{{ id  }}"] = {% endif  %}new TomSelect(el = document.getElementById('select-{{ id  }}'), {
			copyClassesToDropdown: false,
			dropdownParent: 'body',

			{% if not (showSearch)  %}
			controlInput: '<input>',
			{% endif  %}

			render:{
				item: function(data,escape) {
					if( data.customProperties ){
						return '<div><span class="dropdown-item-indicator">' + data.customProperties + '</span>' + escape(data.text) + '</div>';
					}
					return '<div>' + escape(data.text) + '</div>';
				},
				option: function(data,escape){
					if( data.customProperties ){
						return '<div><span class="dropdown-item-indicator">' + data.customProperties + '</span>' + escape(data.text) + '</div>';
					}
					return '<div>' + escape(data.text) + '</div>';
				},
			},
		}));

	});
</script>
{% - endcapture  %}

{% if showScripts  %}
{{ script  }}
{% else  %}
{% capture_script  %}
{{ script  }}
{% endcapture_script  %}
{% endif  %}

{% endif  %}

