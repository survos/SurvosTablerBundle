{# templates/components/ui/input-selectgroup.html.twig v4.8 #}
{%- set values = values | default('One,Two,Three') | split(',') %}
{%- set default = default | default('values[0]') %}
{%- set type = type | default('checkbox') %}
{%- set name = name | default('name') %}
<div class="form-selectgroup{% if class %} {{ class }}{% endif %}">
	{% for value in values %}
	<label class="form-selectgroup-item">
		{%- set s = value | split('i:') %}
		{% if withText %}
		{%- set iconClass = "me1" %}
		{% endif %}
		<input type="{{ type }}" name="{{ name }}" value="{% if s.size == 2 %}{{ s[1] }}{% else %}{{ value }}{% endif %}" class="form-selectgroup-input"{% if value == default %}{% if type == "radio" %} checked{% else %} checked{% endif %}{% endif %}>
		<span class="form-selectgroup-label">{% if s.size == 2 %}{%- set icon = s[1] %}<twig:ui:icon :icon="icon" :class="icon-class" :useSvg="true"/>{% if withText %} {{ icon | capitalize }}{% endif %}{% else %}{{ value }}{% endif %}</span>
	</label>
	{% endfor %}
</div>

