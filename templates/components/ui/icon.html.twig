{# templates/components/ui/icon.html.twig v3.9 #}
{% - assign iconName = icon - %}
{% - assign iconType = type | default('outline') - %}

{% - assign replaceTo = "icon" - %}

{% - if class - %}
{% - assign replaceTo = replaceTo ~ ' ' | append: class - %}
{% - endif - %}

{% - if color - %}
{% - assign replaceTo = replaceTo ~ ' text-' | append: color - %}
{% - endif  %}

{% - if inline - %}
{% - assign replaceTo = replaceTo ~ ' iconInline' - %}
{% - endif - %}

{% - if size - %}
{% - assign replaceTo = replaceTo ~ ' icon-' | append: size - %}
{% - endif - %}

{% - assign replaceTo = 'class="' | append: replaceTo ~ ''' - %}

{% - if site.useIconfont - %}
	<i class="icon ti ti-{{ iconName  }}{% if color  %} {{ color  }}{% endif  %}{% if class  %} {{ class  }}{% endif  %}"></i>
{% - elsif icons[iconName] - %}
	<!-- Download SVG icon from http://tabler.io/icons/icon/{{ iconName  }} -->
	{% set svgIcon = icons[iconName].svg[iconType] | default(null) - %}
	{% - assign svgIcon = svgIcon | replace: '<path stroke="none" d="M0 0h24v24H0z" fill="none"/>', '' - %}
	{{ svgIcon | replace_regex: 'class=\"[^"]+\"', replaceTo | replace: 'class="', 'ariaHidden="true" focusable="false" class="'  }}
{% - endif - %}

