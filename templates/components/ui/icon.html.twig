{# templates/components/ui/icon.html.twig v4.8 #}
{%- set iconName = icon -%}
{%- set iconType = type | default('outline') -%}

{%- set replaceTo = "icon" -%}

{%- if class -%}
{%- set replaceTo = replaceTo ~ ' ' ~ class -%}
{%- endif -%}

{%- if color -%}
{%- set replaceTo = replaceTo ~ ' text-' ~ color -%}
{%- endif %}

{%- if inline -%}
{%- set replaceTo = replaceTo ~ ' iconInline' -%}
{%- endif -%}

{%- if size -%}
{%- set replaceTo = replaceTo ~ ' icon-' ~ size -%}
{%- endif -%}

{%- set replaceTo = 'class="' ~ replaceTo ~ '"' -%}

{%- if site.useIconfont -%}
	<i class="icon ti ti-{{ iconName }}{% if color %} {{ color }}{% endif %}{% if class %} {{ class }}{% endif %}"></i>
{%- elseif icons[iconName] -%}
	<!-- Download SVG icon from http://tabler.io/icons/icon/{{ iconName }} -->
	{%- set svgIcon = icons[iconName].svg[iconType] | default(null) -%}
	{%- set svgIcon = svgIcon | replace({'<path stroke=\"none\" d=\"M0 0h24v24H0z\" fill=\"none\"/>': ''}) -%}
	{{ svgIcon  | replace({'class=\"': 'ariaHidden=\"true\" focusable=\"false\" class=\"'}) }}
{%- endif -%}

