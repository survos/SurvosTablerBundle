{% set addon  %}
	{% if loader  %}
		<span class="input-icon-addon{% if iconClass  %} {{ iconClass  }}{% endif  %}">
			<twig:ui:spinner class="text-secondary" size="sm"/>
		</span>
	{% else  %}
		{% set icon = icon | default('search')  %}
		<span class="input-icon-addon{% if iconClass  %} {{ iconClass  }}{% endif  %}">
			<twig:ui:icon :icon="icon"/>
		</span>
	{% endif  %}
{% - endcapture  %}

<div class="input-icon{% if class  %} {{ class  }}{% endif  %}">
	{% if prepend  %}
		{{ addon  }}
	{% endif  %}

	<input type="{{ type | default('text')  }}" value="{{ value  }}" class="form-control{% if light  %} form-control-light{% endif  %}{% if rounded  %} form-control-rounded{% endif  %}{% if inputClass  %} {{ inputClass  }}{% endif  %}" placeholder="{{ placeholder | default('Search…')  }}"{% if ariaLabel  %} aria-label="{{ ariaLabel  }}"{% endif  %}{% if readonly  %} readonly{% endif  %}>

	{% if not (prepend)  %}
		{{ addon  }}
	{% endif  %}
</div>

