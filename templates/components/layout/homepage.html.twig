{# templates/components/layout/homepage.html.twig v4.8 #}
<div class="row row-deck row-cards">
	<div class="col-sm-12 col-lg-6">
		<twig:cards:welcome/>
	</div>
	<div class="col-sm-6 col-lg-3">
		<twig:cards:total-users/>
	</div>
	<div class="col-sm-6 col-lg-3">
		<twig:cards:active-users-2/>
	</div>
	<div class="col-sm-6 col-lg-3">
		<twig:cards:sales/>
	</div>
	<div class="col-sm-6 col-lg-3">
		<twig:cards:revenue/>
	</div>
	<div class="col-sm-6 col-lg-3">
		<twig:cards:new-clients/>
	</div>

	<div class="col-sm-6 col-lg-3">
	  <twig:cards:active-users/>
	</div>

	<div class="col-12">
		<div class="row row-cards">
			<div class="col-sm-6 col-lg-3">
				<twig:cards:small-stats color="primary" icon="currency-dollar" title="132 Sales" description="12 waiting payments"/>
			</div>
			<div class="col-sm-6 col-lg-3">
				<twig:cards:small-stats color="green" icon="shopping-cart" title="78 Orders" description="32 shipped"/>
			</div>
			<div class="col-sm-6 col-lg-3">
				<twig:cards:small-stats icon="brand-x" color="x" title="623 Shares" description="16 today"/>
			</div>
			<div class="col-sm-6 col-lg-3">
				<twig:cards:small-stats icon="brand-facebook" color="facebook" title="132 Likes" description="21 today"/>
			</div>
		</div>
	</div>

	<div class="col-lg-6">
		<div class="card">
			<div class="card-body">
				<h3 class="card-title">Traffic summary</h3>
				<twig:ui:chart chartId="mentions" size="lg" :legend="true"/>
			</div>
		</div>
	</div>

	<div class="col-lg-6">
		<twig:cards:map-vector title="Locations"/>
	</div>

	{% comment %}
	<div class="col-lg-6">
		<div class="row row-cards">
			<div class="col-12">
			</div>

			<div class="col-sm-4">
				<twig:cards:small-stats-3 :number="43" title="New Tickets" :percentage="6"/>
			</div>
			<div class="col-sm-4">
				<twig:cards:small-stats-3 :number="95" numberPrefix="$" title="Daily Earnings" :percentage="-2"/>
			</div>
			<div class="col-sm-4">
				<twig:cards:small-stats-3 :number="7" title="New Replies" :percentage="9"/>
			</div>
		</div>
	</div>
	{% endcomment %}

	<div class="col-lg-6">
		<div class="row row-cards">
			<div class="col-12">
				<twig:cards:storage-usage/>
			</div>
			<div class="col-12">
				<twig:cards:activity/>
			</div>
		</div>
	</div>

	<div class="col-lg-6">
		<twig:cards:development-activity/>
	</div>

	<div class="col-12">
		<twig:cards:icons-banner/>
	</div>

	<div class="col-md-12 col-lg-8">
		<twig:cards:most-visited-pages/>
	</div>

	<div class="col-md-6 col-lg-4">
		<twig:cards:sponsor/>
	</div>

	<div class="col-md-6 col-lg-4">
		<twig:cards:social-traffic/>
	</div>

	<div class="col-md-12 col-lg-8">
		<twig:cards:tasks/>
	</div>

	<div class="col-12">
		<twig:cards:invoices/>
	</div>
</div>

