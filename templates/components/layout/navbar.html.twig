{# templates/components/layout/navbar.html.twig v4.8 #}
{%- set breakpoint = breakpoint | default('md') %}
{%- set condensed = condensed | default(false) %}
{%- set showTheme = showTheme | default(true) %}
{%- set showNotifications = showNotifications | default(true) %}
{%- set showApps = showApps | default(true) %}
{%- set showLanguage = showLanguage | default(true) %}
{%- set showUser = showUser | default(true) %}

{% if sticky %}
<div class="sticky-top">
{% endif %}

	<header class="navbar navbar-expand-{{ breakpoint }}{% if transparent %} navbar-transparent{% else %}{% if background %} bg-{{ background }}{% endif %}{% endif %}{% if sticky %} sticky-top{% endif %}{% if overlap %} navbar-overlap{% endif %}{% if class %} {{ class }}{% endif %} d-print-none"{% if backgroundColor %} style="background: {{ backgroundColor }}"{% endif %} {% if dark %} data-bs-theme="dark"{% endif %}>
		<div class="container-xl">
			<twig:layout:navbar-toggler target="navbar-menu"/>

			{%- if not (hideBrand) -%}
				<twig:layout:navbar-logo :smallLogo="small-logo" :hideLogo="hide-logo" class="d-none-navbar-horizontal pe-0 pe-md-3" :breakpoint="breakpoint" :showTitle="show-title" :header="true"/>
			{%- endif -%}

			<twig:layout:navbar-side class="order-md-last" :hideUsername="hide-username" :condensed="condensed" :personId="person-id" :breakpoint="breakpoint" :dark="dark" :showThemeToggle="show-theme" :showNotifications="show-notifications" :showApps="show-apps" :showLanguageSelector="show-language" :showUser="show-user"/>

			{% if condensed %}
			<div class="collapse navbar-collapse" id="navbar-menu">
				{% if hideSearch %}
					<!-- BEGIN NAVBAR MENU -->
					<nav aria-label="Primary">
						<twig:layout:navbar-menu :sample="sample" :hideIcons="hide-icons"/>
					</nav>
					<!-- END NAVBAR MENU -->
				{%- elseif hideMenu %}
					<twig:layout:navbar-search :rounded="transparent"/>
				{% else %}
					<div class="d-flex flex-column flex-md-row flex-fill align-items-stretch align-items-md-center">
						<!-- BEGIN NAVBAR MENU -->
						<nav aria-label="Primary">
							<twig:layout:navbar-menu :sample="sample" :hideIcons="hide-icons"/>
						</nav>
						<!-- END NAVBAR MENU -->

						{%- if not (condensed) -%}
							{%- set searchClass = "msMdAuto psMd4 py2 pyMd0 meMd4 orderFirst orderMdLast flexGrow1" %}
							{%- if not (fluidSearch) -%}
								{%- set searchClass = searchClass ~ " flexMdGrow0" %}
							{%- endif -%}

							<!-- BEGIN NAVBAR SEARCH -->
							<twig:layout:navbar-search :breakpoint="breakpoint" :rounded="transparent" :class="search-class"/>
							<!-- END NAVBAR SEARCH -->
						{%- endif -%}
					</div>
				{% endif %}
			</div>
			{% endif %}
		</div>
	</header>

	{%- if not (condensed) -%}
	<div class="navbar-expand-{{ breakpoint }}">
		<div class="collapse navbar-collapse" id="navbar-menu">
			<div class="navbar"{% if darkSecondary %} data-bs-theme="dark"{% endif %}>
				<div class="container-xl">
					<div class="row flex-column flex-md-row flex-fill align-items-center">
						<div class="col">
							<!-- BEGIN NAVBAR MENU -->
							<nav aria-label="Primary">
								<twig:layout:navbar-menu :sample="sample" :hideIcons="hide-icons" :longTitles="true"/>
							</nav>
							<!-- END NAVBAR MENU -->
						</div>


						{%- if not (hideSearch) -%}
						<div class="col-2 d-none d-xxl-block">
							<twig:layout:navbar-search :breakpoint="breakpoint" class="my-2 my-md-0 flex-grow-1 flex-md-grow-0 order-first order-md-last"/>
						</div>
						{%- endif -%}

						<div class="col col-md-auto">
							<!-- BEGIN NAVBAR NAV -->
							<ul class="navbar-nav">
								<li class="nav-item">
									<a class="nav-link" href="#" data-bs-toggle="offcanvas" data-bs-target="#offcanvas-settings">
										<span class="badge badge-sm bg-red text-red-fg">New</span>
										<span class="nav-link-icon d-md-none d-lg-inline-block">
											<twig:ui:icon icon="settings"/>
										</span>
										<span class="nav-link-title">
											Theme Settings
										</span>
									</a>
								</li>
							</ul>
							<!-- END NAVBAR NAV -->
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	{%- endif -%}

{% if sticky %}
</div>
{% endif %}

