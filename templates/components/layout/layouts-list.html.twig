{# templates/components/layout/layouts-list.html.twig v4.8 #}
<div class="row {% if wide %}mb-n5{% else %}mb-n3 mb-md-n5{% endif %}{% if class %} {{ class }}{% endif %}">
	{% for layout in layouts %}
	<div class="{% if wide %}col-12{% else %}col-lg-6{% endif %} {% if wide %}mb-5{% else %}mb-3 mb-md-5{% endif %}{% if layout.soon %} opacity-25{% endif %}">
		<div class="row">
			<div class="col-auto">
				<a href="{{ page | relative }}/{{ layout.page }}" class="position-relative">
					<twig:parts:demo-layout :config="layout.config"/>
				</a>
			</div>
			<div class="col">
				<h3>
					<a href="{{ page | relative }}/{{ layout.page }}">{{ layout.title }}</a>
					{% if layout.new %}
					<twig:ui:badge text="New" color="green" class="ms-2"/>
					{%- elseif layout.soon %}
					<twig:ui:badge text="Soon!" color="yellow" class="ms-2"/>
					{% endif %}
				</h3>
				<p class="text-secondary">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aperiam assumenda atque consequatur.</p>
			</div>
		</div>
	</div>
	{% endfor %}
</div>

