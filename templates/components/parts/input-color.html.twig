{# templates/components/parts/input-color.html.twig v3.9 #}
{% set colors = '' | split(',')  %}
{% if not (hideBlackWhite)  %}
{% set colors = 'dark,white' | split(',')  %}
{% endif  %}

{% for color in site.colors|slice(0, 10)  %}
{% set colors = colors | push: color[0]  %}
{% endfor  %}

<div class="mb-3">
	<label class="form-label">{{ label | default('Color Input')  }}</label>
	<div class="row g-2">
		{% for color in colors - %}
		<div class="col-auto">
			<label class="form-colorinput{% if color == 'white'  %} form-colorinput-light{% endif  %}">
				<input name="{{ name | default('color')  }}" type="{{ type | default('radio')  }}" value="{{ color  }}" class="form-colorinput-input" {% if loop.index == 2  %} checked{% endif  %}/>
				<span class="form-colorinput-color bg-{{ color  }}{% if rounded  %} rounded-circle{% endif  %}"></span>
			</label>
		</div>
		{% - endfor  %}
	</div>
</div>

