{# templates/components/parts/team.html.twig v3.9 #}
<twig:ui:header title="Add a new team"/>
<div class="modal-body">
	<div class="row mb-3 align-items-end">
		<div class="col-auto">
			<twig:ui:avatar-upload class="rounded" size="xl"/>
		</div>
		<div class="col">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" />
		</div>
	</div>

	<twig:parts:input-color label="Pick your team color"/>

	<div>
		<label class="form-label">Additional info</label>
		<textarea class="form-control"></textarea>
	</div>
</div>

<div class="modal-footer">
	<button type="button" class="btn me-auto" data-bs-dismiss="modal">Close</button>
	<button type="button" class="btn btn-primary" data-bs-dismiss="modal">Add Team</button>
</div>

